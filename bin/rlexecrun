#! /bin/bash

if [[ -z "$TMUX" ]]; then 
  echo "This wants to be run inside of tmux"
  exit 1
fi

REMAIN="1"

if [[ "$1" = "--noremain" ]]; then
  REMAIN=0
  shift
fi

for machine in rl00 rl01 rl02 rl03 rl04 rl05 rl06 rl07; do
  winindex=$(tmux neww -n $machine -P ssh -t root@$machine "$@" | cut -f1 -d.)
  if [[ "$REMAIN" = "1" ]]; then
    tmux set-window-option -t $winindex remain-on-exit on
  fi
done
