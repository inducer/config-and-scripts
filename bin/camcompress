#! /bin/bash

set -e

TGTDIR="comp"
mkdir -p "$TGTDIR"
count=1
for i in *.[jJ][pP][gG] ; do
    if test -f '$i'; then
        echo "$count: $i"
        heif-enc "$i" -o "$TGTDIR/${i%%.[jJ][pP][gG]}.heic"
        count=$((count+1))
    fi
done

find . -iname '*.mp4' -print0 | \
    parallel -j1 -0 "mkdir -p $CAMTMPDIR/{//}; ffmpeg -i {} -c:v libx264 -preset medium -crf 22  -b:a 64k $TGTDIR/{}"

echo "compressed files are in comp/"

# vim: sw=4
